<UserControl
    x:Class="zhy.common.datagrid.core.view.ZDataGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:zhy.common.datagrid.core.view"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <DockPanel x:Name="dockPanelTop" LastChildFill="False">
            <TextBox Width="300" />
            <Button Content="查 询" />
        </DockPanel>
        <DockPanel Grid.Row="1">
            <DataGrid x:Name="dataGrid" ItemsSource="{Binding ObservableObjects, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>
        <DockPanel
            x:Name="dockPanelBottom"
            Grid.Row="2"
            LastChildFill="False">
            <Button Content="取 消" DockPanel.Dock="Right" />
            <Button Content="确 定" DockPanel.Dock="Right" />
        </DockPanel>
    </Grid>
</UserControl>
